###########################################
# Est치gio 1: Base (comum para dev e prod) #
###########################################
FROM node:20-alpine AS base
WORKDIR /app
COPY package.json package-lock.json ./
ENV VITE_APP_API_BASE_URL=/api 

###########################################
# Est치gio 2: Desenvolvimento (dev)        #
###########################################
FROM base AS dev
ENV NODE_ENV=development
COPY . .
RUN npm install --include=dev
RUN echo "游닍 Pacotes instalados:" && \
ls -la node_modules/@tabler/icons-react
CMD ["npm", "run", "dev"]  
# Vite dev server

###########################################
# Est치gio 3: Builder (compila칞칚o)         #
###########################################
FROM base AS builder
RUN npm ci
COPY . . 
RUN npm run build  # Gera arquivos em /dist

###########################################
# Est치gio 4: Produ칞칚o (servidor web)      #
###########################################
FROM nginx:alpine AS prod
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80